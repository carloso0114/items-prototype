<%= form_with model: item do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <% item.errors.full_messages_for(:name).each do |message| %>
    <div><%= message %></div>
  <% end %>

  <div>
    <%= form.label :color %><br>
    <%= form.text_field :color %>
  </div>
  <% item.errors.full_messages_for(:color).each do |message| %>
    <div><%= message %></div>
  <% end %>

  <div>
    <%= form.label :identifier %><br>
    <%= form.text_field :identifier %>
  </div>
  <% item.errors.full_messages_for(:identifier).each do |message| %>
    <div><%= message %></div>
  <% end %>

  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </div>

    <div>
    <%= form.label :notes %><br>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>